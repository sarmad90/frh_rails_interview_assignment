<!DOCTYPE html>
<html>
  <head>
    <title>FrhRailsInterviewAssignment</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container-fluid">
        <span class="navbar-brand mb-0 h1">Front Aisle Product Management</span>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'Products', root_path, class: 'nav-link' %>
            </li>
            <li>
              <%= link_to "New product", new_product_path, class: 'nav-link' %>
            </li>
          </ul>
        </div>

        <%= form_with(url: products_path, method: :get, html: { class: 'd-flex' }) do |form| %>
          <%= form.text_field :q, class: "form-control me-2", placeholder: 'Search', aria_label: 'Search', type: 'search' %>
          <button class="btn btn-success" type="submit">Search</button>
        <% end %>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        <div class="col">
          <%= yield %>
        </div>
      </div>
    </div>
    
  </body>
</html>
