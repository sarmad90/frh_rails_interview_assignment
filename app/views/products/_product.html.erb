<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Upc:</strong>
    <%= product.upc %>
  </p>

  <p>
    <strong>Available on:</strong>
    <%= product.available_on %>
  </p>

  <h2>Properties</h2>

  <% product.properties.each do |property| %>
    <p>
      <strong><%= property.name %>:</strong>
      <%= property.value %>
    </p>
  <% end %>
</div>
